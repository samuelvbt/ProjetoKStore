    android:orientation="vertical"
    android:background="@android:color/black">

    <ImageView
        android:id="@+id/fullScreenImageView"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:scaleType="fitCenter" />
</LinearLayout>
